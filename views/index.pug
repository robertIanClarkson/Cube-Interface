extends layout

block content

  - var btnType = 'info'
  - var btnSize = 'lg'
  - var lineGraphHeight = '100'
  
  body.background
    .row
      .row
        //- Sensor
        .col.s6.vl-right-thick
          //- Compass
          h5 Compass
          .row
            .col.s4
              h6
                u X-Axis
              h7#compass-x.sensor-data NULL
            .col.s4.vl-left
              h6
                u Y-Axis
              h7#compass-y.sensor-data NULL
            .col.s4.vl-left
              h6
                u Z-Axis
              h7#compass-z.sensor-data NULL
          .row
            .col.s12
              canvas#compass-line-graph(height=lineGraphHeight)
          .divider
          //- Gyro
          h5 Gyroscope
          .row
            .col.s4
              h6
                u X-Axis
              h7#gyro-x.sensor-data NULL
            .col.s4.vl-left
              h6
                u Y-Axis
              h7#gyro-y.sensor-data NULL
            .col.s4.vl-left
              h6
                u Z-Axis
              h7#gyro-z.sensor-data NULL
          .row
            .col.s12
              canvas#gyro-line-graph(height=lineGraphHeight)           
          .divider
          //- Accel
          h5 Accelerometer
          .row
            .col.s4
              h6
                u X-Axis
              h7#accel-x.sensor-data NULL
            .col.s4.vl-left
              h6
                u Y-Axis
              h7#accel-y.sensor-data NULL
            .col.s4.vl-left
              h6
                u Z-Axis
              h7#accel-z.sensor-data NULL
          .row
            .col.s6.vl-right
              canvas#accel-live-xy
            .col.s6
              canvas#accel-live-z
          .row
            .col.s12
              canvas#accel-line-graph(height=lineGraphHeight)

        //- Motors
        .col.s6
          //- Crossfade
          .slidecontainer
            h5 Tune
            input#crossfade(type="range" min="0" max="136" value="68")
            .row
              .col.s3
                h6
                  u Value 
                h7#crossfade-value.motor-data NULL
          .divider
          //- Coupled
          .slidecontainer
            h5 Coupled
            input#coupled(type="range" min="0" max="140" value="0")
            .row
              .col.s6
                .row
                  .col.s3
                    h6
                      u Value 
                    h7#coupled-value.motor-data NULL
              .col.s6.vl-left
                .row
                  .col
                    h6
                      u isOn: 
                  .col
                    h6#status-all.motor-data NULL
                .row
                  .col
                    button#on-universal(type='button' class='btn green btn-' + btnType + ' btn-' + btnSize) on
                  .col
                    button#off-universal(type='button' class='btn red btn-' + btnType + ' btn-' + btnSize) off
          .divider
          //- Motor 0
          .col.s6.vl-right
            .slidecontainer
              h5 Motor 0
              input#speed-0(type="range" min="0" max="140" value="0")
              .row
                .col.s6.vl-right
                  h6 
                    u Value 
                  h7#speedValue-0.motor-data NULL
                .col.s6
                  h6 
                    u PWM
                  h7#pwm-0.motor-data NULL
              .divider
              .row
                .col
                  h6 
                    u isOn: 
                .col
                  h6#status-0.motor-data NULL
              .row
                .col
                  button#on-0(type='button' class='btn green btn-' + btnType + ' btn-' + btnSize) on
                .col
                  button#off-0(type='button' class='btn red btn-' + btnType + ' btn-' + btnSize) off
          //- Motor 1
          .col.s6
            .slidecontainer
              h5 Motor 1
              input#speed-1(type="range" min="0" max="140" value="0")
              .row
                .col.s6.vl-right
                  h6 
                    u Value 
                  h7#speedValue-1.motor-data NULL
                .col.s6
                  h6 
                    u PWM
                  h7#pwm-1.motor-data NULL
              .divider
              .row
                .col
                  h6 
                    u isOn:   
                .col
                  h6#status-1.motor-data NULL
              .row
                .col
                  button#on-1(type='button' class='btn green btn-' + btnType + ' btn-' + btnSize) on
                .col
                  button#off-1(type='button' class='btn red btn-' + btnType + ' btn-' + btnSize) off
    .divider

    script(src="/socket.io/socket.io.js")
    script(type="module" src="/javascripts/motors.js")
    script(type="module" src="/javascripts/graphs.js")
    script(type="module" src="/javascripts/update.js")
    script(type="module" src="/javascripts/midi.js")
    script(src="/javascripts/controller.js")
