extends layout

block content
  h1= title

  - var btnType = 'info'
  - var btnSize = 'lg'
  
  body.background

    div#device_info
      div#key_data

    br
    br

    div.slidecontainer
      h6 Motor 1 Speed:
      input#motorSpeedSlider(type="range" min="0" max="135" value="0")
      h6#speedValue
    
    br
    br

    div
      div.row
        div.col
          button#refresh(type='button' class='btn btn-' + btnType + ' btn-' + btnSize) refresh
    
    br
    br

    div
      h5 ON / OFF
      div.row
        div.col
          h6 Status : 
        div.col
          h6#status
      div.row
        div.col
          button#on(type='button' class='btn btn-' + btnType + ' btn-' + btnSize) on
        div.col
          button#off(type='button' class='btn btn-' + btnType + ' btn-' + btnSize) off
    
    br
    br

    div
      h5 SPEED
      div.row
        div.col
          h6 Current Speed : 
        div.col
          h6#speed
      div.row
        div.col
          button#down(type='button' class='btn btn-' + btnType + ' btn-' + btnSize) down
        div.col
          button#up(type='button' class='btn btn-' + btnType + ' btn-' + btnSize) up

    br
    br

    div
      div.row
        div.col
          button#test(type='button' class='btn btn-' + btnType + ' btn-' + btnSize) test

  script(src='/javascripts/controller.js')
