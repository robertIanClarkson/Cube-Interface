extends layout

block content
  h1= title

  - var btnType = 'info'
  - var btnSize = 'lg'
  
  body.background

    <script src="https://unpkg.com/unmute" data-add-button="true"></script>
    <div id="content">
        <div class="button" data-key="q" data-sound="https://dl.dropboxusercontent.com/s/h9sow482vkw06xe/dinky-kick.mp3"></div>
        <div class="button" data-key="w" data-sound="https://dl.dropboxusercontent.com/s/kkikcupdg9n1qiy/dinky-snare.mp3"></div>
        <div class="button" data-key="e" data-sound="https://dl.dropboxusercontent.com/s/d7jlxp5v4z0n62q/dinky-hat-2.mp3"></div>
        <div class="button" data-key="r" data-sound="https://dl.dropboxusercontent.com/s/rblgnob6tvriudy/dinky-cym.mp3"></div>
        <div class="button" data-key="t" data-sound="https://dl.dropboxusercontent.com/s/umm8cmrmn8n4a46/dinky-cym-noise.mp3"></div>
    </div>
    <div id="device_info">
        <div id="key_data"></div>
    </div>


    div.slidecontainer
      h6 Motor 1 Speed:
      input#motorSpeedSlider(type="range" min="0" max="135" value="0")
      h6#speedValue
    
    br
    br

    div
      div.row
        div.col
          button#refresh(type='button' class='btn btn-' + btnType + ' btn-' + btnSize) refresh
    
    br
    br

    div
      h5 ON / OFF
      div.row
        div.col
          h6 Status : 
        div.col
          h6#status
      div.row
        div.col
          button#on(type='button' class='btn btn-' + btnType + ' btn-' + btnSize) on
        div.col
          button#off(type='button' class='btn btn-' + btnType + ' btn-' + btnSize) off
    
    br
    br

    div
      h5 SPEED
      div.row
        div.col
          h6 Current Speed : 
        div.col
          h6#speed
      div.row
        div.col
          button#down(type='button' class='btn btn-' + btnType + ' btn-' + btnSize) down
        div.col
          button#up(type='button' class='btn btn-' + btnType + ' btn-' + btnSize) up

    br
    br

    div
      div.row
        div.col
          button#test(type='button' class='btn btn-' + btnType + ' btn-' + btnSize) test

  script(src='/javascripts/controller.js')
